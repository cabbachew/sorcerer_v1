<%= turbo_frame_tag "source_#{source.id}" do %>
  <div class="source">
    <%= link_to source.name,
                source_path(source),
                data: { turbo_frame: "_top" } %>
    <div class="source__actions">
      <%= button_to "Delete",
                    source_path(source),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_source_path(source),
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>