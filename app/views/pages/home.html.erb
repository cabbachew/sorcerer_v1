<main class="container"> 
  <% if user_signed_in? %>
    <div style="display:flex; align-items:center; justify-content:space-between">
      <h1 style="color:var(--color-primary)">welcome</h1>
      <%= link_to "view your sources", sources_path, class: "btn btn--primary" %>
    </div>
    <div data-controller="message">
      <div  id="message-display" 
            style="margin-top:15px;
                  height:50vh;
                  overflow:auto;
                  background-color: var(--color-white);
                  border-radius: var(--border-radius);
                  box-shadow: var(--shadow-small);
                  margin-bottom: var(--space-m);
                  padding: var(--space-xs)"
            data-message-target="display">
      </div>
      <div class="message-form">
        <form action="" 
              id="form" 
              class="source"
              data-action="submit->message#sendMessage submit->message#clearInput">
          <div class="form__group">
            <input  type="text" 
                    id="message-input"
                    placeholder="Type a message"
                    class="form__input"
                    data-message-target="input">
          </div>
          <input  type="submit" 
                  value="Send" 
                  class="btn btn--secondary">
        </form>
    </div>

  <% else %>
    <div style="display:flex;flex-direction:column">
      <h1 style="margin-inline:auto; color:var(--color-secondary">You have a lot of knowledge.</h1>
      <h1 style="margin-inline:auto; margin-top:20px; color:var(--color-secondary-rotate">Let <%= link_to "Sorcerer", new_user_session_path, style: "color:var(--color-primary); text-decoration:underline" %> help you use it.</h1>
    </div>
  <% end %>
</main>